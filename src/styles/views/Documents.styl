#doc-title {
	font-size: 40px;
	font-family: "Lucida Console", Arial, monospace;
	width:100vw;
	
	
}

.doc-summary{
	font-family:  Arial, monospace;
	
}

.doc-content{
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	height: calc(100vh - 125px);
	margin: 0px 35px 0px 35px;
}

.doc-row{
	/*border: 1px solid #ccc;
