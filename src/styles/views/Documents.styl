	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	align-items: center;
	flex:1;
	font-family:  Arial, monospace;
}

.doc-contain-pic{
	display: flex;
  	justify-content: center;
  	align-items: center;
  	border: 1px solid #ccc;
	border-radius:16px;
	height:80%;
	width:20%;
	align-self:center;
	margin: 0px 25px 0px 25px;
	font-size: 25px;
	font-family: "Lucida Console", Arial, monospace;
}



